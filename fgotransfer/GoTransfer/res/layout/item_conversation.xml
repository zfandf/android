<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/c7" >
    
    <include 
        layout="@layout/item_header_conversation" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:id="@+id/rl_item_transfer_file"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/bg_item_transfer_list_receive"
	    android:layout_marginLeft="12dp"
	    android:layout_marginRight="12dp"
	    android:layout_marginTop="2dp"
	    android:layout_marginBottom="2dp"
	    android:padding="6dp" >
	
	    <ImageView
	        android:id="@+id/img_file_thumb"
	        android:layout_width="64dp"
	        android:layout_height="64dp"
	        android:layout_alignParentLeft="true"
	        android:layout_marginRight="12dp"
	        android:src="@drawable/bg_history_file"
	        android:contentDescription="@null" />
	    
	    <TextView
	        android:id="@+id/tv_file_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/img_file_thumb"
	        android:paddingTop="4dp"
	        android:ellipsize="end"
	        android:singleLine="true"
	        android:textColor="@color/c1"
	        android:textSize="@dimen/t3" />
	    
	    <ProgressBar
	        android:id="@+id/progress_bar"
	        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="5dp"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="12dp"
	        android:layout_toRightOf="@+id/img_file_thumb"
	        android:max="100"
	        android:progressDrawable="@drawable/progress_drawable" />
	    
	    <ImageView
	        android:id="@+id/img_file_info"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/img_file_thumb"
	        android:layout_alignParentRight="true"
	        android:src="@drawable/ic_more"
	        android:contentDescription="@null" />

	    <TextView
	        android:id="@+id/tv_file_size"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/img_file_thumb"
	        android:layout_toLeftOf="@+id/img_file_info"
	        android:layout_toRightOf="@+id/img_file_thumb"
	        android:layout_alignTop="@+id/img_file_info"
	        android:gravity="center_vertical"
	        android:textColor="@color/c2"
	        android:textSize="@dimen/t3" />
	    
	    <TextView
	        android:id="@+id/tv_status"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:paddingRight="8dp"
	       	android:layout_alignBottom="@+id/img_file_thumb"
	        android:layout_toLeftOf="@+id/img_file_info"
	        android:layout_alignTop="@+id/img_file_info"
	        android:layout_alignParentRight="true"
	        android:textColor="@color/c8"
	        android:textSize="@dimen/t3" />
	
	</RelativeLayout>
    
</LinearLayout>