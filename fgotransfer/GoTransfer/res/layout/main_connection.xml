<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:visibility="visible" >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <cn.m15.app.android.gotransfer.ui.widget.HorizontalListView
            android:id="@+id/hlv_receivers"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_connection_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:textColor="@color/c3"
            android:textSize="@dimen/t5"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="56dp"
        android:background="@color/c4" />

    <Button
        android:id="@+id/btn_break"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:drawableTop="@drawable/bg_btn_cancel"
        android:text="@string/disconnect"
        android:textColor="@color/c1"
        android:textSize="@dimen/t5" />

    <Button
        android:id="@+id/btn_abolish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:drawableTop="@drawable/bg_btn_abolish"
        android:text="@string/cancel"
        android:textColor="@color/c1"
        android:textSize="@dimen/t5"
        android:visibility="gone" />

</LinearLayout>