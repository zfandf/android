<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!-- API 11 theme customizations can go here. -->
        <item name="android:windowContentOverlay">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionBarDivider">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@android:color/transparent</item>
        <item name="actionBarItemBackground">@android:color/transparent</item>
        <item name="android:actionMenuTextAppearance">@style/ActionBar.MenuTextStyle</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="switchStyle">@style/MySwitchStyle</item>
    </style>

    <style name="MySwitchStyle" parent="Widget.Holo.CompoundButton.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="thumb">@drawable/switch_thumb</item>
        <item name="textOn">@string/show_empty</item>
        <item name="textOff">@string/show_empty</item>
        <item name="switchMinWidth">0dip</item>
         <item name="switchPadding">0dip</item>
    </style>
    
    <style name="MySwitchStyle.switchTextAppearance" parent="TextAppearance.Holo.Widget.Switch">
        <item name="android:textColor">@color/textcolor_switch</item>
    </style>
    
    <!-- actionbar style -->
    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:icon">@drawable/transparent</item>
        <item name="android:logo">@drawable/ic_back</item>
        <item name="android:background">@color/c3</item>
        <item name="android:height">@dimen/actionbar_height</item>
    	<item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    	<item name="android:displayOptions">homeAsUp|showHome|showTitle|showCustom|useLogo</item>
    </style>
    
    <!-- actionbar title text style -->
    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/c7</item>
        <item name="android:textSize">@dimen/t1</item>
    </style>
    
     <!-- actionbar menu text style -->
    <style name="ActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/c7</item>
        <item name="android:textSize">@dimen/t1</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- main activity style -->
    <style name="MainActivityStyle" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MainActivity.ActionBarStyle</item>
    </style>

    <style name="MainActivity.ActionBarStyle" parent="MyActionBarStyle">
        <item name="android:logo">@drawable/ic_menu</item>
    </style>
    
</resources>