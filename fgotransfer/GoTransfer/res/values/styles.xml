<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="actionBarDivider">@android:color/transparent</item>
        <item name="actionBarItemBackground">@android:color/transparent</item>
        <item name="actionMenuTextAppearance">@style/ActionBar.MenuTextStyle</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="homeAsUpIndicator">@android:color/transparent</item>
        <item name="switchStyle">@style/MySwitchStyle</item>
    </style>

    <style name="MySwitchStyle" parent="Widget.Holo.CompoundButton.Switch">
        <item name="track">@drawable/switch_track</item>
        <item name="thumb">@drawable/switch_thumb</item>
        <item name="textOn">@string/show_empty</item>
        <item name="textOff">@string/show_empty</item>
        <item name="switchMinWidth">0dip</item>
        <item name="switchPadding">0dip</item>
    </style>

    <style name="MySwitchStyle.switchTextAppearance" parent="TextAppearance.Holo.Widget.Switch">
        <item name="android:textColor">@color/textcolor_switch</item>
    </style>

    <!-- actionbar style -->
    <style name="MyActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="icon">@drawable/transparent</item>
        <item name="logo">@drawable/ic_back</item>
        <item name="background">@color/c3</item>
        <item name="height">@dimen/actionbar_height</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle|showCustom|useLogo</item>
    </style>

    <!-- actionbar title text style -->
    <style name="ActionBar.TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/c7</item>
        <item name="android:textSize">@dimen/t1</item>
    </style>

    <!-- actionbar menu text style -->
    <style name="ActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/c7</item>
        <item name="android:textSize">@dimen/t1</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/bg_activity</item>
    </style>

    <!-- main activity style -->
    <style name="MainActivityStyle" parent="AppBaseTheme">
        <item name="actionBarStyle">@style/MainActivity.ActionBarStyle</item>
    </style>

    <style name="MainActivity.ActionBarStyle" parent="MyActionBarStyle">
        <item name="logo">@drawable/ic_menu</item>
    </style>

    <!-- text and color style -->


    <!-- custom check box -->
    <style name="CompoundButton.CustomCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_custom</item>
    </style>

    <style name="ProgressBarStyle">
　　        <item name="android:indeterminateDrawable">@drawable/progressbar</item>
    </style>

</resources>