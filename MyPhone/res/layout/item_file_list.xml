<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_file"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal" >
    
    <ImageView android:id="@+id/id_file_icon"
        android:contentDescription="@string/main_title"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:maxWidth="32dp"
        android:maxHeight="32dp"
        android:drawableLeft="@drawable/folder"/>
    
    <TextView android:id="@+id/id_file_name"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    
    <TextView android:id="@+id/id_file_size"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
	
</LinearLayout>
